{erl_opts, [debug_info]}.

{lfe_first_files, []}.

{deps, [
  {lfe, ".*", {git, "git://github.com/lfe/lfe.git", {branch, "bleeding-edge"}}}, 
  {yaws, ".*", {git, "git://github.com/erlsci/yaws.git", {branch, "rebar3-support"}}},
  {lutil, ".*", {git, "git://github.com/lfex/lutil.git", {tag, "0.9.0"}}},
  {ltest, ".*", {git, "git://github.com/lfex/ltest.git", {tag, "0.9.0"}}},
  {lfest, ".*", {git, "git://github.com/lfex/lfest.git", {tag, "0.3.0"}}},
  {exemplar, ".*", {git, "git://github.com/lfex/exemplar.git", {tag, "0.4.2"}}},
  {logjam, ".*", {git, "git://github.com/lfex/logjam.git", {tag, "0.4.1"}}}
  ]}.

% {plugins, [
%    {'lfe-compile', {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.3.0"}}}
%   ]}.

{provider_hooks, [{pre, [{compile, {lfe, compile}}]}]}.

{profiles, [
  {dev, [
    {plugins, [
      {'lfe-version', {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.3.0"}}},
      {'lfe-clean', {git, "https://github.com/lfe-rebar3/clean.git", {tag, "0.2.0"}}}
      ]}
    ]}
  ]}.
